@import "imports/reset.styl"
@import "imports/variables.styl"

// COMMON STYLES
body
  //TODO: background-color: $background????????????????
  font-size: $font-size
  font-family: 'Open Sans', Verdana, sans-serif

// MODULE STYLES
div.wrapper
  box-sizing: border-box;
  width: 64em
  height: 48em
  margin: 0 auto
  padding: 1.2em 1.625em
  background-color: $background
  overflow: hidden;

header h1
  text-transform: uppercase;
  font-size: 1.5em
  font-weight: 800
  color: $text-primary
  span
    color: $main-color


// MASONRY GRID
section.main
  overflow: hidden;


div.grid
  height: 620px
  margin: 1em 0

div.grid-item
  width: 235px
  height: 200px
  float: left
  img
    width: 100%
    height: 100%

div.grid-item--width
  width: 480px

div.grid-item--height
  height: 410px

.grid-item.placeholder
  text-align: center
  background: white
  color: $text-secondary

  p
    margin: .7em
    font-size: .9em
    font-weight: 600

  .add-img-button
    background: $main-color
    border-radius: 50% //MIXIN
    width: 50px
    height: 50px
    margin: (50% - 25px) auto 0

    span
      color: white
      font-weight: 800
      font-size: 2.5em
      line-height: 50px


// SCROLLBAR
//TODO: hide schrollbar by default
div.scroll
  box-sizing: border-box
  height: 10px
  width: 100%
  margin: 2.625em 0
  background: $scroll-box
  border-radius: .5em
  position: relative

  div.scroll-bar
    width: 0
    height: 100%;
    background: $main-color
    border-radius: .5em
    cursor: pointer
    position: absolute
    margin: 0
