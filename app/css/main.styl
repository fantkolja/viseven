@import "imports/reset.styl"
@import "imports/variables.styl"

// COMMON STYLES
body
  //TODO: background-color: $background????????????????
  font-size: $font-size
  font-family: 'Open Sans', Verdana, sans-serif

// MODULE STYLES
div.wrapper
  box-sizing: border-box;
  width: 64em
  height: 48em
  margin: 0 auto
  padding: 1.2em 1.625em
  background-color: $background
  overflow: hidden;

header h1
  text-transform: uppercase;
  font-size: 1.5em
  font-weight: 800
  color: $grey-text
  span
    color: $main-color


// MASONRY GRID
section.main
  // outline: 1px solid gold
  overflow: hidden;


div.grid
  // outline: 1px solid blue
  height: 620px
  margin: 1em auto

div.grid-item
  width: 240px
  height: 200px
  // outline: 1px solid red
  // margin: 5px
  float: left
  img
    width: 100%
    height: auto

div.grid-item--width
  width: 476px

div.grid-item--height
  height: 400px

.grid-item.placeholder
  text-align: center
  background: white


// SCROLLBAR
//TODO: hide schrollbar by default
div.scroll
  box-sizing: border-box
  height: 10px
  width: 100%
  margin: 2.625em 0
  background: $scroll-box
  border-radius: .5em
  position: relative

  div.scroll-bar
    width: 0
    height: 100%;
    background: $main-color
    border-radius: .5em
    cursor: pointer
    position: absolute
